@model AMS.Models.UserMasterModel

@* @{
    Layout = "~/Views/Shared/_Layout.cshtml";
} *@
<style>
    div#commonlargeModal {
        margin-top: -398px;
    }

    #saveEmployeeButtonId{
        background: #102557;
    }

    #saveEmployeeButtonIdId {
        background: #102557;
    }
</style>

<div class="modal-header p-3" style="background-color:#102557;">
    <h5 class="modal-title text-white">
        @(Model.IsEdit ? "Edit User" : "Add User")
    </h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"
            aria-label="Close" id="close-modal"></button>
</div>

<form class="validation-wizard form-horizontal form-material needs-validation" id="AddUserform" autocomplete="off">
    <div class="modal-body">
        <div class="row">
            <input asp-for="UserMasterId" type="hidden" />
            <div class="col-6">
                <label class="form-label" asp-for="FirstName"></label> <span class="text-danger"> *</span>
                <input asp-for="FirstName" class="form-control" required>
                <span class="text-danger" asp-validation-for="FirstName"></span>
            </div>
            <div class="col-6">
                <label class="form-label" asp-for="LastName"></label> </span>
                <input asp-for="LastName" class="form-control" >
                 @* <span class="text-danger" asp-validation-for="LastName"></span>  *@
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-6">
                <div>
                    <label for="iconInput" class="form-label" asp-for="Username"></label> <span class="text-danger"> *</span>
                    <div class="form-icon">
                        <input type="email" asp-for="Username" class="form-control form-control-icon email-inputmask"
                               id="iconInput" placeholder="example@gmail.com" required>
                        <i class="ri-mail-unread-line"></i>
                    </div>
                </div>
                <span class="text-danger" asp-validation-for="Username"></span>
            </div>
            <div class="col-6">
                <div>
                    <label for="iconInput" class="form-label" asp-for="Userpassword"></label> <span class="text-danger"> *</span>
                    <div class="form-icon">
                        <input type="password" asp-for="Userpassword" class="form-control form-control-icon"
                               id="iconInput" placeholder="3******" >
                        <i class="bx bx-phone"></i>
                    </div>
                </div>  
                <span class="text-danger" asp-validation-for="Userpassword"></span>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-6">
                <div>
                    <label for="iconInput" class="form-label" asp-for="ContactNumber"></label> <span class="text-danger"> *</span>
                    <div class="form-icon">
                        <input type="text" asp-for="ContactNumber" class="form-control form-control-icon"
                               id="iconInput" placeholder="3******">
                        <i class="bx bx-phone"></i>
                    </div>
                </div>
                <span class="text-danger" asp-validation-for="ContactNumber"></span>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label class="form-label" asp-for="DateOfBirth"></label> <span class="text-danger"> *</span>
                    <input type="date" asp-for="DateOfBirth" class="form-control form-control-icon" required>
                    <span class="text-danger" asp-validation-for="DateOfBirth"></span>
                </div>
            </div>
        
        </div>


        <div class="row mt-2">
             <div class="col-6">
                <div>
                    <label for="iconInput" class="form-label" asp-for="RoleId"></label> <span class="text-danger"> *</span>
                    <select class="form-select req-border text-uppercase" asp-for="RoleId" asp-items="Model.RoleList" required>
                        <option value="">Select Role</option>
                    </select>
                </div>
                <span class="text-danger" asp-validation-for="RoleId"></span>
            </div>
            <div class="col-6">
                <label class="form-label" asp-for="IsActive"></label> <span class="text-danger"> *</span>
                <select class="form-select req-border text-uppercase" asp-for="IsActive" required>
                    <option value="false">IN-ACTIVE</option>
                    <option value="true">ACTIVE</option>
                </select>
                <span class="text-danger" asp-validation-for="IsActive"></span>

            </div>

        </div>
        <div class="row mt-2">
            @{
                var genders = new List<SelectListItem>
                        {
                        new SelectListItem { Value = "1", Text = "Male" },
                        new SelectListItem { Value = "0", Text = "Female" }
                        };
            }

            <div class="col-6">
                <label class="form-label" asp-for="Gender"></label>
                <span class="text-danger">*</span>

                <select asp-for="Gender" asp-items="genders" class="form-control form-control-icon">
                    <option value="">Select Gender</option>
                </select>

                <span class="text-danger" asp-validation-for="Gender"></span>
            </div>



            <div class="col-6">
                <label class="form-label" asp-for="BranchId"></label> <span class="text-danger"> *</span>
                <select asp-for="BranchId" class="form-control form-control-icon" asp-items="Model.BranchList">
                    <option value="">Select Branch</option>
                 </select> <span class="text-danger" asp-validation-for="BranchId"></span> 
            </div>
        </div>
       

    </div>
</form>

<div class="modal-footer border-0 pt-6 px-0 pb-0" > 
    <button type="button" class="btn btn-secondary" id=" saveEmployeeButtonIdId" waves-effect" data-bs-dismiss="modal"><i class="fas fa-ban "></i> Cancel</button>
    <button type="button" class="btn btn-success" id="saveEmployeeButtonId" onclick="ams.user.Save()"><i class="fas fa-save"></i> Save</button>
</div>