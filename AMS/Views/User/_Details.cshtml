                    <label class="form-label" asp-for="usermaster.DateOfBirth"></label> <span class="text-danger"> *</span>
                    <input type="date" asp-for="usermaster.DateOfBirth" class="form-control form-control-icon" required>
                    <span class="text-danger" asp-validation-for="usermaster.DateOfBirth"></span>
                </div>
